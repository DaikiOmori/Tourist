<div class="text-center">  
  <h1>プロフィール編集</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@user) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>


      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :profile_image, 'プロフィール画像' %><br>
        <div class="col-md-4 col-md-offset-4">
          <% if @user.profile_image? %>
            <%= image_tag @user.profile_image, class: "media-object img-rounded img-responsive", alt: "プロフィール画像" %>
          <% else %>
            <%= image_tag '/images/no-translate-detected_318-10541.jpg', class: "media-object img-rounded img-responsive", alt: "プロフィール画像" %><br>
          <% end %>
        </div>
          <%= f.file_field :profile_image, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :profile_description, '自己紹介' %>
        <%= f.text_field :profile_description, class: 'form-control' %>
      </div>


      <%= f.submit '変更を保存', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>